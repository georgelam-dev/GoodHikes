<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ca.uwaterloo.magic.goodhikes.StatisticsActivity"
    tools:showIn="@layout/activity_statistics">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:stretchColumns="*">


        <TableRow>
            <!-- Owner Name -->
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Owner:"
                android:textSize="13dip"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:textColor="#c3f7f7"
                android:paddingLeft="0dp" />
            <TextView android:id="@+id/owner_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="AAA"
                android:textSize="13dip"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:textColor="#ffffff"
                android:paddingLeft="0dp" />
        </TableRow>
        <TableRow>
            <!-- Route Name -->
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Route Name:"
                android:textSize="13dip"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:textColor="#c3f7f7"
                android:paddingLeft="0dp" />
            <TextView android:id="@+id/stat_route_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="demo route"
                android:textSize="13dip"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:textColor="#ffffff"
                android:paddingLeft="0dp" />
        </TableRow>
        <TableRow>
            <!-- Start Time -->
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Start Time:"
                android:textSize="13dip"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:textColor="#c3f7f7"
                android:paddingLeft="0dp" />
            <TextView android:id="@+id/start_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="01/01/10 10:10 PM"
                android:textSize="13dip"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:textColor="#ffffff"
                android:paddingLeft="0dp" />
        </TableRow>
        <TableRow>
            <!-- Last Time -->
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="End Time:"
                android:textSize="13dip"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:textColor="#c3f7f7"
                android:paddingLeft="0dp" />
            <TextView android:id="@+id/last_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="01/01/10 10:20 PM"
                android:textSize="13dip"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:textColor="#ffffff"
                android:paddingLeft="0dp" />
        </TableRow>
        <TableRow>
            <!-- Duration -->
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Duration:"
                android:textSize="13dip"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:textColor="#c3f7f7"
                android:paddingLeft="0dp" />
            <TextView android:id="@+id/duration"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="00:00:20"
                android:textSize="13dip"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:textColor="#ffffff"
                android:paddingLeft="0dp" />
        </TableRow>
        <TableRow>
            <!-- Total Distance -->
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Total Distance (km):"
                android:textSize="13dip"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:textColor="#c3f7f7"
                android:paddingLeft="0dp" />
            <TextView android:id="@+id/total_distance"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="-1"
                android:textSize="13dip"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:textColor="#ffffff"
                android:paddingLeft="0dp" />
        </TableRow>
        <TableRow>
            <!-- Average Speed -->
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Average Speed (m/s):"
                android:textSize="13dip"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:textColor="#c3f7f7"
                android:paddingLeft="0dp" />
            <TextView android:id="@+id/aver_speed"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="-1"
                android:textSize="13dip"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:textColor="#ffffff"
                android:paddingLeft="0dp" />

        </TableRow>
        <TableRow>
            <!-- Maximum Speed -->
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Maximum Speed (m/s):"
                android:textSize="13dip"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:textColor="#c3f7f7"
                android:paddingLeft="0dp" />
            <TextView android:id="@+id/max_speed"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="100"
                android:textSize="13dip"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:textColor="#ffffff"
                android:paddingLeft="0dp" />
        </TableRow>
        <TableRow>
            <!-- Number of Waypoints -->
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Number of Waypoints:"
                android:textSize="13dip"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:textColor="#c3f7f7"
                android:paddingLeft="0dp" />
            <TextView android:id="@+id/num_waypoints"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="4"
                android:textSize="13dip"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:textColor="#ffffff"
                android:paddingLeft="0dp" />
        </TableRow>
        <TableRow>
            <!-- Private or Public -->
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Private:"
                android:textSize="13dip"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:textColor="#c3f7f7"
                android:paddingLeft="0dp" />
            <TextView android:id="@+id/route_private"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="True"
                android:textSize="13dip"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:textColor="#ffffff"
                android:paddingLeft="0dp" />
        </TableRow>

    </TableLayout>

</RelativeLayout>
